<!--fenbao/credit/credit.wxml-->
<view class="credit" hover-class="none" hover-stop-propagation="false">
    <image class="backll" src="{{back}}" mode="widthFix" lazy-load="false" binderror="" bindload="" />
      
      <view class="content">
            <view class="content_top" hover-class="none" hover-stop-propagation="false">
                <view class="top_one">
                    <view class="top_one_left dsib">
                        我的积分
                    </view>
                     <view class="top_one_right dsib">
                        规则
                    </view>
                </view>
                 <view class="top_two">
                    <view class="top_two_left dsib">
                            <view class="fontcolor1">{{jifen}}</view>
                            <view class="guoqi">月底即将过期: {{guoqi}}</view>
                    </view>
                     <view class="top_two_right dsib">
                            去赚积分 
                    </view>
                </view>
            </view>
            
            <view class="content_info" hover-class="none" hover-stop-propagation="false">
                <view class="contentlist"  wx:for="{{duihuanlist}}" wx::key="index">
                        <view class="mask"></view>
                        <image class="listimg" src="{{item.img}}" mode="widthFix" lazy-load="false" binderror="" bindload="" />
                            <view class="jfdh">
                        <view class="price">{{item.price}}积分兑换</view>
                        <view class="listtit">{{item.title}}</view>
                            </view>
                        
                </view>
            </view>

              
      </view>
      
</view>
