/* fenbao/credit/credit.wxss */
.dsib{
    display: inline-block;
}

::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
    }
   
.credit{
 
    width: 100vw;
    height: 100vh;
    overflow: auto;
    position: relative;
    font-family: "pingfang";


}
.backll{
    width: 100%;
    position: fixed;
    top: 0px;
    left: 0px;
}
.content{
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    padding: 5%;
    box-sizing: border-box;
}
.content_top{
    width: 100%;
}
.top_one{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.top_one_left{
    color: white;

    font-weight: bold;
}
.top_one_right ,.guoqi{
    color: #4e5675;
    font-size: calc(42rpx / 1.5);
}
.verm{
    vertical-align: middle;
}
.top_one{
    margin-top: 50rpx;
}
.top_two{
    color: white;
}
.fontcolor1{
    color: #ebbd70;
    font-size: calc(84rpx / 1.5)
}
.top_two{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.top_two{
    margin-top: 35rpx;
}
.top_two_right{
    box-sizing: border-box;
    padding-left: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: calc(300rpx / 1.5);
    height: calc(90rpx / 1.5);
    background: linear-gradient(45deg,#ecbd70,#bb9355);
    color: #041736;
    border-top-left-radius: 60rpx;
    border-bottom-left-radius: 60rpx;
    font-size: calc(42rpx / 1.5);
    margin-right: -38rpx;

}
.content_info{
    color: white;
    display: flex;
    justify-content: space-between;
    flex-flow: row wrap;
    overflow: auto;

}
.contentlist{
    width: calc(482rpx / 1.5);
    height: calc(580rpx / 1.5);
    position: relative;
    margin: 15rpx 0rpx;
    border-radius: 30rpx;
    overflow: hidden;
    box-sizing: border-box;
}
.listimg{
    width: 100%;
}
.content_info{
    padding: 40rpx 0rpx;
    padding-top: 100rpx
}
.mask{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    background:linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0),rgba(41, 59, 94, 0.664), #293b5e,#1f3053);
}
.jfdh{
    font-size: 30rpx;
    position: absolute;
    bottom: 20px ;
    left: 0px;
    padding: 0px 20rpx;
}
.price{
    font-size: calc(36rpx / 1.5);
    color: #ebbd70
}
.white{
    color: white
}
.imgejsie{
    width: calc(20rpx / 1.5);
    margin-right: 30rpx;
}